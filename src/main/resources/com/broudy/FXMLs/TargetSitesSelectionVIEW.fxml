<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@../StyleSheets/BaseStyles.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.broudy.boundary.view_controllers.TargetSitesSelectionController">
   <children>
      <VBox alignment="CENTER" layoutX="189.0" layoutY="110.0" spacing="30.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label styleClass="view-title" text="Target-site(s) Selector" VBox.vgrow="NEVER" />
            <VBox prefHeight="200.0" prefWidth="100.0" spacing="5.0">
               <children>
                  <Label styleClass="text-bold" text="Match DNA sequences to their target-site:" />
                  <Label fx:id="descriptionLBL" layoutX="10.0" layoutY="10.0" text="Please iterate over sequences selected in previous screen and match to a target-site:" />
               </children>
            </VBox>
            <HBox fx:id="contentHB" spacing="20.0" VBox.vgrow="ALWAYS">
               <children>
                  <VBox alignment="CENTER_LEFT" spacing="5.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="DNA sequences to be matched:" />
                        <ComboBox fx:id="unmatchedCB" maxWidth="1.7976931348623157E308" promptText="Select 1st sequence to match" VBox.vgrow="NEVER">
                           <VBox.margin>
                              <Insets bottom="20.0" />
                           </VBox.margin>
                        </ComboBox>
                        <Label layoutX="10.0" layoutY="10.0" text="Specify target-site's start and end indices (inclusive):" />
                        <HBox maxWidth="1.7976931348623157E308" VBox.vgrow="NEVER">
                           <children>
                              <HBox alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label minWidth="49.0" styleClass="text-16" text="Start: " HBox.hgrow="NEVER" />
                                    <TextField fx:id="startIndexTF" maxWidth="150.0" prefColumnCount="5" HBox.hgrow="ALWAYS">
                                       <HBox.margin>
                                          <Insets />
                                       </HBox.margin>
                                    </TextField>
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="10.0" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label minWidth="43.0" styleClass="text-16" text="End: " HBox.hgrow="NEVER" />
                                    <TextField fx:id="endIndexTF" maxWidth="150.0" prefColumnCount="5" HBox.hgrow="ALWAYS" />
                                 </children>
                              </HBox>
                              <Button fx:id="setBTN" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" mnemonicParsing="false" prefWidth="50.0" text="Set" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                        <Region prefHeight="200.0" prefWidth="200.0" />
                        <HBox alignment="CENTER">
                           <children>
                              <Label text="OR" />
                           </children>
                        </HBox>
                        <Region layoutX="10.0" layoutY="166.0" prefHeight="200.0" prefWidth="200.0" />
                        <Button fx:id="uploadTargetSiteBTN" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Upload target-site sequence" />
                     </children>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </VBox>
                  <VBox layoutX="257.0" layoutY="10.0" maxWidth="200.0" minWidth="200.0" spacing="5.0" HBox.hgrow="SOMETIMES">
                     <children>
                        <Label text="Matched sequences:" />
                        <ListView fx:id="matchedLV" VBox.vgrow="ALWAYS" />
                        <Button fx:id="unmatchBTN" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" mnemonicParsing="false" prefWidth="50.0" text="Unmatch" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <Button fx:id="nextBTN" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" mnemonicParsing="false" prefHeight="50.0" text="Next" VBox.vgrow="NEVER" />
            <HBox prefHeight="100.0" prefWidth="200.0" />
         </children>
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
